// Sass configuration
{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sass Compile",
      "type": "shell",
      "command": "sass theme.scss theme.css",
      "group": "build"
    },
    {
      "label": "Sass Watch",
      "type": "shell",
      "command": "sass --watch theme.scss theme.css",
      "group": "build"
    }
  ]
}
